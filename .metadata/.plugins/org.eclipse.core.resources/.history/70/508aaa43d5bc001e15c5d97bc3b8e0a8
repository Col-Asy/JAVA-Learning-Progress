package Assg5;
import java.util.*;
public class Subarrays_Having_product_less_than_k {
	public static int returnArraysNumber(long[] arr, long k) {
		int startPt=0, count=0;
		long prdct=1;
		
		while(startPt<arr.length) {
			prdct=prdct*arr[startPt];
			if(prdct<k) {
				count++;
			}
			else {
				prdct=1;
			}
			
			startPt++;
		}
		
		return count;
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner input = new Scanner(System.in);
		int n = input.nextInt();
		long k = input.nextLong();
		long[] arr = new long[n];
		for(int i=0; i<n; i++) {
			long j = input.nextLong();
			arr[i] = j;
		}
		
		System.out.println(returnArraysNumber(arr, k));
	}

}
